<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="MASXamarinFormsDemo.Views.ItemEditorPage"
			 Title="New Idea">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15">
			<Label Text="Title" FontSize="Medium" />
            <Entry Text="{Binding Idea.Title}" FontSize="Small"  Placeholder="Title"/>
			<Label Text="Summary" FontSize="Medium" />
            <Editor Text="{Binding Idea.Summary}" FontSize="Small" Margin="0" />
		    <Label Text="Department" FontSize="Medium" />
            <Entry Text="{Binding Idea.Department}" FontSize="Small" Margin="0" Placeholder="Department"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
